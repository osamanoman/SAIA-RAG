# SAIA-RAG Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# === CORE APPLICATION SETTINGS ===
ENVIRONMENT=production
DEBUG=false
APP_NAME="SAIA-RAG Customer Support AI Assistant"
APP_VERSION="0.1.0"

# === OPENAI CONFIGURATION ===
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-large

# === VECTOR DATABASE CONFIGURATION ===
QDRANT_URL=http://qdrant:6333
EMBED_DIM=3072

# === TENANT CONFIGURATION ===
TENANT_ID=t_customerA

# === RAG CONFIGURATION ===
CONFIDENCE_THRESHOLD=0.35
MAX_SEARCH_RESULTS=8
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# === CUSTOMER SUPPORT SPECIFIC CONFIGURATION ===
ESCALATION_THRESHOLD=0.40
WHATSAPP_CONFIDENCE_THRESHOLD=0.20
MAX_RESPONSE_TOKENS=300
ENABLE_QUERY_ENHANCEMENT=true
ENABLE_CONVERSATION_MEMORY=true

# === API CONFIGURATION ===
API_KEY=your-secure-production-api-key-here
BASE_URL=https://yourdomain.com
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# === WHATSAPP BUSINESS API CONFIGURATION ===
# Get these from Meta Developer Console: https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token-here
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id-here
WHATSAPP_APP_ID=your-app-id-here
WHATSAPP_APP_SECRET=your-app-secret-here

# === SUPPORT CATEGORIES ===
SUPPORT_CATEGORIES=["troubleshooting", "billing", "setup", "general", "policies"]

